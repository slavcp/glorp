{
  "uncapFps": {
    "name": "Uncap FPS",
    "id": "uncapFps",
    "type": "checkbox",
    "category": "Main",
    "defaultValue": true,
    "button": false,
    "needsRestart": true
  },

  "swapper": {
    "name": "Resource Swapper",
    "id": "swapper",
    "description": false,
    "type": "checkbox",
    "category": "Main",
    "defaultValue": true,
    "button": "Open folder",
    "buttonAction": "window.chrome.webview.postMessage('open,%USERPROFILE%/Documents/glorp/swapper')",
    "needsRestart": true
  },

  "blocklist": {
    "name": "URL Blocklist",
    "id": "blocklist",
    "description": "Blocks connection to the sites listed in the filter list, defaults offer a safe and efficient set.",
    "type": "checkbox",
    "category": "Main",
    "defaultValue": true,
    "button": "Open file",
    "buttonAction": "window.chrome.webview.postMessage('open,%USERPROFILE%/Documents/glorp/blocklist.json')",
    "needsRestart": true
  },

  "userscripts": {
    "name": "Userscripts",
    "id": "userscripts",
    "description": "it really just loads files from a folder, userscripts is an overstatement",
    "type": "checkbox",
    "category": "Main",
    "defaultValue": false,
    "button": "Open folder",
    "buttonAction": "window.chrome.webview.postMessage('open,%USERPROFILE%/Documents/glorp/scripts')",
    "needsRestart": true
  },

  "checkUpdates": {
    "name": "Check For Updates",
    "id": "checkUpdates",
    "description": false,
    "type": "checkbox",
    "category": "Main",
    "defaultValue": true,
    "button": false,
    "needsRestart": true
  },

  "accountManager": {
    "name": "Account Manager",
    "id": "accountManager",
    "description": false,
    "type": "checkbox",
    "category": "Main",
    "defaultValue": true,
    "button": false,
    "needsRestart": false
  },

  "exitButton": {
    "name": "Exit Button",
    "id": "exitButton",
    "description": false,
    "type": "checkbox",
    "category": "Main",
    "defaultValue": false,
    "button": false,
    "needsRestart": false
  },

  "hpEnemyCounter": {
    "name": "Hardpoint Enemy counter",
    "id": "hpEnemyCounter",
    "description": "Shows the number of enemies present on the hardpoint during competitive matches",
    "type": "checkbox",
    "category": "Game",
    "defaultValue": true,
    "button": false,
    "needsRestart": false
  },

  "hideBundles": {
    "name": "Hide Bundle Popups",
    "id": "hideBundles",
    "description": false,
    "type": "checkbox",
    "category": "Game",
    "defaultValue": false,
    "button": false,
    "needsRestart": false
  },

  "showPing": {
    "name": "Ping in Player List",
    "id": "showPing",
    "description": false,
    "type": "checkbox",
    "category": "Game",
    "defaultValue": true,
    "button": false,
    "needsRestart": false
  },

  "menuTimer": {
    "name": "Timer in Menu",
    "id": "menuTimer",
    "description": false,
    "type": "checkbox",
    "category": "Game",
    "defaultValue": false,
    "button": false,
    "needsRestart": false
  },

  "rawInput": {
    "name": "Raw Input (!)",
    "id": "rawInput",
    "description": "Achieve lower latency and greater precision with raw input, hooks requestPointerLock so use at your own risk. Should be safe",
    "type": "checkbox",
    "category": "Tweaks",
    "defaultValue": true,
    "button": false,
    "needsRestart": true
  },

  "throttle": {
    "name": "CPU Throttling",
    "id": "throttle",
    "description": "Throttle CPU, value is the multiplier (2 should be 50%), ONLY USE IF YOUR GAME EXPERIENCES INSTABILITY",
    "type": "slider",
    "min": 1,
    "max": 3,
    "step": 0.01,
    "category": "Tweaks",
    "defaultValue": 1,
    "button": false,
    "needsRestart": false
  },

  "inMenuThrottle": {
    "name": "CPU Throttling in Menu",
    "id": "inMenuThrottle",
    "description": "Throttle CPU in menus, fixes an issue related to render FPS in menus",
    "type": "slider",
    "min": 1,
    "max": 3,
    "step": 0.01,
    "category": "Tweaks",
    "defaultValue": 1.5,
    "button": false,
    "needsRestart": false
  },

  "webviewPriority": {
    "name": "Webview Priority",
    "id": "webviewPriority",
    "description": "Higher priority yields slightly better performance but might cause instabilities",
    "type": "select",
    "category": "Tweaks",
    "defaultValue": "Normal",
    "button": false,
    "needsRestart": true,
    "options": [
      "!! Realtime !!",
      "High",
      "Above Normal",
      "Normal",
      "Low",
      "Below Normal",
      "Idle"
    ]
  },

  "hardFlip": {
    "name": "Hook DXGI Swapchain Creation",
    "id": "hardFlip",
    "description": "Reduce latency by tweaking swapchain settings; keep on unless experiencing crashes",
    "type": "checkbox",
    "category": "Tweaks",
    "defaultValue": true,
    "button": false,
    "needsRestart": true
  }
}
