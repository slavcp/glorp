{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": { "includes": ["src/**/*.js"] },
	"formatter": { "enabled": true, "indentStyle": "tab", "lineWidth": 120 },
	"linter": {
		"enabled": true,
		"rules": { "recommended": true }
	},
	"javascript": { "formatter": { "quoteStyle": "double" } }
}
